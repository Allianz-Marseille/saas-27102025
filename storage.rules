rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'ADMINISTRATEUR';
    }
    
    // Tous les fichiers : règles par défaut (à adapter selon besoins)
    match /{allPaths=**} {
      allow read, write: if false; // Par défaut, tout est bloqué
    }
  }
}

