# Firebase (client) — obligatoire pour auth et accès aux pages protégées
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin — pour les opérations côté serveur
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# URL de base de l'app (liens, webhooks). Fallback sur Host si absent.
NEXT_PUBLIC_BASE_URL=

# Crons — Bearer secret pour routes protégées (/api/cron/*)
CRON_SECRET=

# Pappers API Configuration
PAPPERS_API_KEY=your_pappers_api_key_here

# Societe.com API Configuration
SOCIETE_API_KEY=your_societe_api_key_here

# Mistral AI — pour le chat IA (Big-Boss + Experts)
MISTRAL_API_KEY=your_mistral_api_key_here
