# --- Nina / Assistant — variables obligatoires pour le déploiement Nina ---
# Référence : docs/agents-ia/nina_secretaire/TODO-DEPLOIEMENT-NINA.md

# OpenAI — côté serveur uniquement, jamais exposé au client (/api/assistant/chat, extraction fichiers)
OPENAI_API_KEY=

# Firebase (client) — obligatoire pour auth et accès aux pages /commun/agents-ia/*
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin — si conversations/export persistés côté serveur
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# --- Optionnelles selon usage ---

# Feature flag Nina (activation du bot secrétaire en prod)
NEXT_PUBLIC_ENABLE_NINA_BOT=false

# Feature flag Bob (Assistant agence Santé & Prévoyance)
NEXT_PUBLIC_ENABLE_BOB_BOT=false

# URL de base de l'app (liens, webhooks). Fallback sur Host si absent.
NEXT_PUBLIC_BASE_URL=

# Extraction PDF/images (OCR, Document AI) — si Nina traite des documents
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# Crons — Bearer secret pour routes protégées (/api/cron/*)
CRON_SECRET=

# Smoke test Nina (optionnel) — voir docs/agents-ia/nina_secretaire/TODO-DEPLOIEMENT-NINA.md § 7
# get-firebase-token : SMOKE_TEST_EMAIL=... SMOKE_TEST_PASSWORD=... npm run get-firebase-token
# smoke:nina : SMOKE_TEST_BASE_URL=https://xxx.vercel.app npm run smoke:nina
SMOKE_TEST_EMAIL=
SMOKE_TEST_PASSWORD=
SMOKE_TEST_BASE_URL=

# Pappers API Configuration
PAPPERS_API_KEY=your_pappers_api_key_here

# Societe.com API Configuration
SOCIETE_API_KEY=your_societe_api_key_here

